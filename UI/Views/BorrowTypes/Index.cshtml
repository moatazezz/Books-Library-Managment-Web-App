@model IEnumerable<BLL.VM.BorrowTypeVM>

@{
    ViewBag.Title = "Index";
}
<dir class="form-horizontal">
    <h2>Borrow Type List</h2>
<br />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</dir>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllowedBorrowPeriod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DelayPenalty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllowedBorrowPeriod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DelayPenalty)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) 
            @*@Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })*@
        </td>
    </tr>
}

</table>
