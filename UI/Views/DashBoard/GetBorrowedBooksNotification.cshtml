@model IEnumerable<BLL.VM.BorrowReturnActionVM>

@{
    ViewBag.Title = "GetBorrowedBooksNotification";
}
<div class="form-horizontal">

    <h2>Borrowed Books Notification</h2>
    <hr />
    
   
 
</div>
    <table class="table">
        <tr>
            <th>
                Book Title
            </th>
            <th>
                Borrower Name
            </th>
            <th>
                Borrow Date
            </th>
            <th>
                Allowed Borrow Period
            </th>
            <th>
                Delay Penalty
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Borrowers.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BorrowDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Book.BorrowType.AllowedBorrowPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.BorrowType.DelayPenalty)
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.id })
                    </td>*@
            </tr>
        }

    </table>
